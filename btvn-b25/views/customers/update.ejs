<h1>Sửa khách hàng</h1>

<% if(msg?.length){%>
<div class="alert alert-danger"><%= msg %></div>
<% } %>
<form action="" method="post">
  <div class="mb-3">
    <label for="">Tên</label>
    <input
      type="text"
      name="name"
      placeholder="Tên ..."
      class="form-control"
      value="<%= customer.name %>"
    />
    <span class="text-danger"><%= validate.getError(errors,"name") %></span>
  </div>
  <div class="mb-3">
    <label for="">Email</label>
    <input
      type="text"
      name="email"
      placeholder="Email ..."
      class="form-control"
      value="<%= customer.email %>"
    />
    <span class="text-danger"><%= validate.getError(errors,'email') %></span>
  </div>
  <div class="mb-3">
    <label for="">Mật khẩu</label>
    <input
      type="password"
      name="password"
      placeholder="Mật khẩu ..."
      class="form-control"
      value="<%= customer.password %>"
    />
    <span class="text-danger"><%= validate.getError(errors,'password') %></span>
  </div>
  <div class="mb-3">
    <label for="">Trạng thái</label>
    <select name="status" class="form-select">
      <option value="0">Chưa kích hoạt</option>
      <option value="1">Kích hoạt</option>
    </select>
  </div>
  <div class="mb-3">
    <label for="">Tỉnh/Thành Phố</label>
    <select name="province_id" class="form-control">
      <!-- <option value="0">Chọn Tỉnh/ Thành Phố</option> -->
      <% provinceList.forEach(({id, name}) => {%>
      <option value="<%= id %>"><%= name %></option>
      <% }) %>
    </select>

    <span class="text-danger"
      ><%= validate.getError(errors,'province_id') %></span
    >
  </div>
  <button class="btn btn-success">Lưu</button>
  <a href="/customers" class="btn btn-danger">Hủy</a>
</form>
