<h2 class="text-center">LOG IN</h2>
<%- msg.length ? `
<div class="alert alert-danger">${msg}</div>
` : "" %>

<form action="" method="post">
  <div class="mb-3">
    <input
      type="email"
      name="email"
      placeholder="Email..."
      class="form-control"
    />
  </div>
  <div class="mb-3">
    <input
      type="password"
      name="password"
      placeholder="Password ...."
      class="form-control"
    />
  </div>
  <div class="d-grid">
    <button class="btn btn-primary" type="submit">Submit</button>
  </div>
</form>
