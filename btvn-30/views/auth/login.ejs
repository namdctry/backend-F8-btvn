<h1 class="text-center">Đăng nhập</h1>
<%- msg.length ? `
<div class="alert alert-danger">${msg}</div>
`: "" %>
<form action="" method="post">
  <div class="mb-3">
    <label for="">email</label>
    <input
      type="email"
      name="email"
      class="form-control"
      placeholder="gmail..."
      required
    />
  </div>
  <div class="mb-3">
    <label for="">Mat khau</label>
    <input
      type="password"
      name="password"
      class="form-control"
      placeholder="mat khau..."
      required
    />
  </div>
  <div class="d-grid">
    <button type="submit" class="btn btn-primary">dang nhap</button>
  </div>
  <div class="mt-3 d-flex justify-content-between">
    <a href="/auth/register" class="btn btn-primary">Dang ki</a>
    <a href="/auth/forgetPw" class="">Quen mat khau</a>
  </div>
</form>
